! ROFI

rofi.color-enabled:         true
rofi.color-window:          argb:dd111111, argb:0000000, argb:dd111111
rofi.color-normal:          argb:0333333,  #aaaaaa,      argb:0333333, argb:0333333, #ffffff
rofi.color-active:          argb:0333333,  #ffffff,      argb:0333333, argb:0333333, #ffffff
rofi.color-urgent:          argb:0333333,  #ffadab,      argb:0333333, argb:0333333, #ff7044

! OLD ROFI CONFIG
! rofi.color-enabled:       true
! rofi.color-window:        #ffffff, #ffffff, #333333
! rofi.color-normal:        #ffffff, #333333, #ffffff, #268bd2, #ffffff
! rofi.color-active:        #ffffff, #268bd2, #ffffff, #268bd2, #ffffff
! rofi.color-urgent:        #ffffff, #c3382c, #ffffff, #c3382c, #ffffff

rofi.separator-style:       solid
rofi.font:                  Helvetica Neue Thin 40
rofi.padding:               128
rofi.width:                 100
rofi.lines:                 8
rofi.line-margin:           40

! URXVT / TERMINAL
URxvt.geometry:             120x30
URxvt.scrollBar:            false
URxvt.font:                 xft:Input Mono:size=10
URxvt.perl-ext-common:      default,matcher
URxvt.url-launcher:         /usr/bin/firefox
URxvt.matcher.button:       1
URxvt.urgentOnBell:         true
URxvt.internalBorder:       24
URxvt.cursorBlink:          true

URxvt*scrollColor:          #a8a19f
URxvt*highlightColor:       #68615e
URxvt*highlightTextColor:   #9c9491

*cursorColor:               #a8a19f

